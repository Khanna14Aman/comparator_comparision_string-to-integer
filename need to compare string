discuss==>https://leetcode.com/problems/find-the-kth-largest-integer-in-the-array/discuss/1431881/c%2B%2B-solution-using-sorting-(comparator)
discuss==>https://leetcode.com/problems/find-the-kth-largest-integer-in-the-array/discuss/1431813/C%2B%2B-or-Simple-or-Explained-with-Diagram


//first approach by sorting in descending 
#include<bits/stdc++.h>
using namespace std;


 bool compare(string &a,string &b){
     int na=a.size(),nb=b.size();
     if(na==nb){
         for(int i=0;i<na;i++){
             if(a[i]>b[i])return true;
             if(b[i]>a[i])return false;
         }
     }
     return a.size()>b.size();
 }

class Solution {
public:
    string kthLargestNumber(vector<string>& nums, int k) {
        
        sort(nums.begin(),nums.end(),compare);
        return nums[k-1];
        
    }
};





// second approach by sorting in ascending order

#include<bits/stdc++.h>
using namespace std;


 bool compare(string &a,string &b){
     int na=a.size(),nb=b.size();
     if(na==nb){
         for(int i=0;i<na;i++){
             if(a[i]>b[i])return false;
             if(b[i]>a[i])return true;
         }
     }
     return a.size()<b.size();
 }

class Solution {
public:
    string kthLargestNumber(vector<string>& nums, int k) {
        
        sort(nums.begin(),nums.end(),compare);
        int n=nums.size();
        return nums[n-k];
        
    }
};
